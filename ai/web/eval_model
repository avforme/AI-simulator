AIPLANNER_HOME=${AIPLANNER_HOME:-$HOME/aiplanner}

if [ "$1" != "--result-dir" ]; then
    echo '--result-dir must be first argument' >&2
    exit 1
fi
RESULT_DIR=$2

AI_DIR=$AIPLANNER_HOME/ai

$AI_DIR/eval_model.py $* > "$RESULT_DIR/eval.log" 2>&1 || exit 1
