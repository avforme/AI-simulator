# This program is distributed WITHOUT ANY WARRANTY; without even the
# implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR
# PURPOSE.

AIPLANNER_HOME=${AIPLANNER_HOME:-$HOME/aiplanner}
PARALLEL=${PARALLEL:-True}  # Set to "False" to run seeds sequentially rather than in parallel.
SEEDS=${SEEDS:-5}
if [ -n "$EVAL_NUM_TIMESTEPS" ]; then
    EXTRA_EVAL_ARGS="--eval-num-timesteps $EVAL_NUM_TIMESTEPS"
fi

EXTRA_ARGS=$*
AI_DIR=$AIPLANNER_HOME/ai
PYTHONPATH_ADD=$AI_DIR/baselines:$AI_DIR/gym-fin:$AIPLANNER_HOME/spia
if [ -z "$PYTHONPATH" ]; then
    export PYTHONPATH=$PYTHONPATH_ADD
else
    export PYTHONPATH=$PYTHONPATH_ADD:$PYTHONPATH
fi
CONFIG_FILE=$AI_DIR/validation/aiplanner-scenario.conf

if [ "$PARALLEL" = True ]; then
    VALIDATE=validate_parallel
else
    VALIDATE=validate
fi

validate () {

    MODEL_NAME=$1
    ARGS=$2
    TRAIN_ARGS=$3
    EVAL_ARGS=$4

    SEED=0
    set -o pipefail
    while [ $SEED -lt $SEEDS ]; do
        MODEL_DIR=run.$MODEL_NAME-seed_$SEED.tf
        TEMPFILE=`tempfile -p valid`
        $AI_DIR/train_ppo1.py -c $CONFIG_FILE --model-dir=$MODEL_DIR $ARGS --train-seed=$SEED $TRAIN_ARGS $EXTRA_ARGS 2>&1 | tee -a $TEMPFILE || exit 1
        mv $TEMPFILE $MODEL_DIR/train.log
        $AI_DIR/run_model.py -c $CONFIG_FILE --model-dir=$MODEL_DIR $ARGS $EVAL_ARGS $EXTRA_ARGS $EXTRA_EVAL_ARGS 2>&1 | tee $MODEL_DIR/eval.log || exit 1
        SEED=`expr $SEED + 1`
    done
}

validate_parallel () {

    MODEL_NAME=$1
    ARGS=$2
    TRAIN_ARGS=$3
    EVAL_ARGS=$4

    SEED=0
    while [ $SEED -lt $SEEDS ]; do
        MODEL_DIR=run.$MODEL_NAME-seed_$SEED.tf
        # Output directory must not exist when tensorflow save() is called to save the model hence we can't write the log within it; instead log to a tempfile.
        TEMPFILE=`tempfile -p valid`
        TEMPFILES[$SEED]=$TEMPFILE
        $AI_DIR/train_ppo1.py -c $CONFIG_FILE --model-dir=$MODEL_DIR $ARGS --train-seed=$SEED $TRAIN_ARGS $EXTRA_ARGS > $TEMPFILE 2>&1 &
        SEED=`expr $SEED + 1`
    done
    wait

    SEED=0
    while [ $SEED -lt $SEEDS ]; do
        MODEL_DIR=run.$MODEL_NAME-seed_$SEED.tf
        mv ${TEMPFILES[$SEED]} $MODEL_DIR/train.log
        $AI_DIR/run_model.py -c $CONFIG_FILE --model-dir=$MODEL_DIR $ARGS $EVAL_ARGS $EXTRA_ARGS $EXTRA_EVAL_ARGS > $MODEL_DIR/eval.log 2>&1 &
        SEED=`expr $SEED + 1`
    done
    wait
}

$VALIDATE fixed_30-gi_0-no_bonds '--master-life-table=fixed --master-age-end=95 --master-guaranteed-income=0 --master-no-real-bonds --master-no-nominal-bonds --master-bills'
$VALIDATE ssa_plus_3_female-iid_bonds '--master-no-real-bonds --master-no-nominal-bonds --master-iid-bonds'
$VALIDATE ssa_plus_3_female-nominal_iid_bonds '--master-no-real-bonds --master-no-nominal-bonds --master-iid-bonds --master-iid-bonds-type=nominal'
$VALIDATE ssa_plus_3_female-nominal_bonds_20 '--master-no-real-bonds --master-nominal-bonds-duration=20'
$VALIDATE ssa_plus_3_female-nominal_bonds_7 '--master-no-real-bonds --master-nominal-bonds-duration=7'
$VALIDATE ssa_plus_3_female-nominal_bonds '--master-no-real-bonds'
$VALIDATE ssa_plus_3_female-real_bonds_20 '--master-no-nominal-bonds --master-real-bonds-duration=20'
$VALIDATE ssa_plus_3_female-real_bonds_7 '--master-no-nominal-bonds --master-real-bonds-duration=7'
$VALIDATE ssa_plus_3_female-real_bonds '--master-no-nominal-bonds'
$VALIDATE ssa_plus_3_female-real_and_nominal_bonds
$VALIDATE ssa_plus_3_female-real_and_nominal_bonds-blind '--master-no-observe-interest-rate --master-no-observe-inflation-rate'

# Notes on tweaks that have been tried out:
#
# train-reward-clip=50 produces worse results without guaranteed income, but had no effect when guranteed income was present.
#    $VALIDATE fixed_30-gi_0-p_300000-train_reward_clip_inf '--life-table=fixed --master-age-end=95 --master-guaranteed-income=0 --master-p-notax=300000' '--train-reward-clip=inf'
#    $VALIDATE fixed_30-gi_16000-p_2000000-train_reward_clip_inf '--life-table=fixed --master-age-end=95 --master-guaranteed-income=16000 --master-p-notax=2000000' '--train-reward-clip=inf'

# train-num-timesteps=4000000 doesn't improve CE:
#     $VALIDATE fixed_30-gi_16000-p_2000000-timesteps_4000000 '--life-table=fixed --master-age-end=95 --master-guaranteed-income=16000 --master-p-notax=2000000' '--train-num-timesteps=4000000'
